pipeline {
    agent any

    stages {
        stage('AWS Creds') {
            steps {
                withCredentials([[
                $class: 'AmazonWebServicesCredentialsBinding', 
                credentialsId: 'awscreds', 
                accessKeyVariable: 'AWS_ACCESS_KEY_ID', 
                secretKeyVariable: 'AWS_SECRET_ACCESS_KEY']]) {
                    sh "aws s3 ls"
                }
            }
        }
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
    
        stage ("terraform init") {
            steps {
                sh '''
                cd RDS-PostgresSql
                ls -l
                terraform init
                '''
            }
        }
        
        stage ("plan") {
            steps {
                sh '''
                cd RDS-PostgresSql
                ls -l
                terraform plan
                '''
            }
        }

        stage ("Action") {
            steps {
                sh '''
                echo "Terraform action is --> ${action}"
                cd RDS-PostgresSql
                ls -l
                terraform ${action} -auto-approve 
                '''
           }
        }
    }
}
    
